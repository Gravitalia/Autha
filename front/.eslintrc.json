{
  "parser": "vue-eslint-parser",
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "@nuxtjs/eslint-config-typescript",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["warn", "double"],
    "vue/no-multiple-template-root": "off"
  }
}
